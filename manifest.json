{
  "name": "Yammer Plugin",
  "version": "1.0",
  "description": "Chrome Plugin for Yammer",
  "icons": {
    "128": "icon128.png"
  },
  "manifest_version":2,
  "browser_action": {
    "default_icon": "yammerlogo.png",
    "default_title": "Yammer Plugin",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.yammer.com/robots.txt*"],
      "js": ["oauth2/oauth2_inject.js"],
        "run_at": "document_start"
    }
  ],
  "permissions": [
    "https://www.yammer.com/oauth2/*","https://www.yammer.com/api/*"
  ],
  "web_accessible_resources" : [
    "oauth2/oauth2.html"
  ]
}
